<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#12000000"
    >
<android.support.v4.view.ViewPager
    android:id="@+id/team_new_banner"
    android:layout_width="match_parent"
    android:background="#12000000"
    android:layout_height="130dp">
</android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/team_new_selector_ll"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/team_new_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:src="@drawable/cicle_selector"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/cicle_selector"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/cicle_selector"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:saveEnabled="true"
            android:src="@drawable/cicle_selector"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/cicle_selector"/>
    </LinearLayout>
    <TextView
        android:id="@+id/team_new_title"
        android:layout_below="@id/team_new_banner"
        android:padding="5dp"
        android:gravity="center"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <android.support.v7.widget.CardView
        android:layout_below="@id/team_new_title"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="260dp">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<TextView
    android:id="@+id/team_new_text"
    android:text="我的小组"
    android:layout_marginLeft="10dp"
    android:textSize="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/team_new_dividline"
            android:background="#12000000"
            android:layout_below="@+id/team_new_text"
            android:layout_alignLeft="@id/team_new_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
            <ImageView
                android:id="@+id/team_myGroup_image"
                android:layout_below="@id/team_new_dividline"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_nomygroup"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/team_start_gruop"
                android:layout_below="@id/team_myGroup_image"
                android:layout_alignLeft="@id/team_myGroup_image"
                android:layout_alignRight="@+id/team_myGroup_image"
                android:background="@drawable/add_item"
                android:text="开启你的小组之旅"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>