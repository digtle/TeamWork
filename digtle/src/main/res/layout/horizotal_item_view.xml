<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
<ImageView
    android:id="@+id/group_banner"
    android:src="@drawable/group_banner"
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="100dp" />
    <ImageView
        android:id="@+id/group_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:src="@drawable/group_pngico"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/group_name"
        android:layout_below="@id/group_icon"
        android:layout_marginTop="10dp"
        android:text="手机控"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/group_info"
        android:layout_below="@id/group_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/group_number_iv"
            android:src="@drawable/ic_topicmember"
            android:layout_toLeftOf="@+id/group_number_tv"
            android:layout_width="8dp"
            android:layout_height="8dp" />
        <TextView
            android:id="@+id/group_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13240成员"
            android:layout_toLeftOf="@+id/group_pot"
            android:layout_alignBottom="@id/group_number_iv"
            android:layout_marginLeft="5dp"
            android:textSize="6sp"
            />
<TextView
    android:id="@+id/group_pot"
    android:text="."
    android:textSize="6sp"
    android:layout_centerHorizontal="true"
    android:gravity="top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="2dp"
    />
        <ImageView
            android:id="@+id/group_thread_iv"
            android:src="@drawable/ic_topicnum"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/group_pot"
            android:layout_width="8dp"
            android:layout_height="8dp" />
        <TextView
            android:id="@+id/thread_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1324话题"
            android:layout_toRightOf="@id/group_thread_iv"
            android:layout_alignBottom="@id/group_number_iv"
            android:layout_marginLeft="5dp"
            android:textSize="6sp"
            />
    </RelativeLayout>
 </RelativeLayout>
</android.support.v7.widget.CardView>