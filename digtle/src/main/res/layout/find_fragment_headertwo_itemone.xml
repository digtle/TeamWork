<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:layout_margin="6dp">
                <TextView
                    android:id="@+id/line1"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#ff5722"/>
                <ImageView
                    android:id="@+id/remen_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_whatshot_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/remen_tv"/>
                <TextView
                    android:id="@id/remen_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热门"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:layout_margin="6dp">
                <TextView
                    android:id="@+id/line2"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#cddc39"/>
                <ImageView
                    android:id="@+id/huodong_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/category_activity_new"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/huodong_tv"/>
                <TextView
                    android:id="@id/huodong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:layout_margin="6dp">
                <TextView
                    android:id="@+id/line3"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#469de6"/>
                <ImageView
                    android:id="@+id/zixun_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_news_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/remen_tv"/>
                <TextView
                    android:id="@id/remen_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资讯"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:layout_margin="6dp">
                <TextView
                    android:id="@+id/line4"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#69707a"/>
                <ImageView
                    android:id="@+id/pingce_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_devices_other_black_24dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/remen_tv"/>
                <TextView
                    android:id="@id/remen_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评测"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>