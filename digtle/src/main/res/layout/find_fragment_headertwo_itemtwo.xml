<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/line1"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#3f4247"/>
                <Button
                    android:id="@+id/button_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:layout_toRightOf="@id/line1"
                    android:drawableLeft="@drawable/category_phone"
                    android:paddingLeft="20dp"
                    android:text="手机"
                    android:background="#ffffff"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:id="@+id/line2"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="#3f4247"/>
                <Button
                    android:id="@+id/button_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="click"
                    android:layout_toRightOf="@id/line2"
                    android:drawableLeft="@drawable/category_mouse"
                    android:paddingLeft="20dp"
                    android:text="周边"
                    android:background="#ffffff"/>
            </RelativeLayout>

        </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout1"
        android:paddingBottom="15dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/line3"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="#3f4247"/>
            <Button
                android:id="@+id/button_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="click"
                android:layout_toRightOf="@id/line3"
                android:drawableLeft="@drawable/category_ipad"
                android:paddingLeft="20dp"
                android:text="平板"
                android:background="#ffffff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/line4"
                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="#3f4247"/>
            <Button
                android:id="@+id/button_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="click"
                android:layout_toRightOf="@id/line4"
                android:drawableLeft="@drawable/category_notebook"
                android:paddingLeft="20dp"
                android:text="电脑"
                android:background="#ffffff"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>