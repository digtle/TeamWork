<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/comment_logo"
    android:src="@drawable/user_pic_default"
    android:layout_width="40dp"
    android:layout_height="40dp" />
    <TextView
        android:id="@+id/comment_name"
        android:layout_toRightOf="@id/comment_logo"
        android:textSize="14sp"
        android:text="死鬼H"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/commnt_content"
        android:layout_marginTop="5dp"
        android:text="现在的生活很好了"
        android:textColor="#000000"
        android:layout_below="@+id/comment_name"
        android:layout_alignLeft="@id/comment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tiem_data"
        android:layout_alignParentRight="true"
        android:text="13分钟前"
        android:layout_alignTop="@+id/comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>